@model Nhom8_IMUA.Models.DanhMuc

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h3 class="elements-header">Chi tiết danh mục: @Html.DisplayFor(model => model.TenDM)</h3>
        <br />
        <div class="table-responsive">
            <table class="table table-striped">
                <tr>
                    <td>
                        <label class="elements-title">Mã danh mục :</label>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.MaDM)
                    </td>
                </tr>
                <tr>
                    <td>
                        <label class="elements-title">Ảnh danh mục :</label>
                    </td>
                </tr>
                <tr>
                    <td>
                        @{
                            string AnhDMPath = "~/assets/Images/DanhMuc/" + Model.AnhDM;
                        }
                        <img src="@Url.Content(AnhDMPath)" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <label class="elements-title">Biểu tượng danh mục :</label>
                    </td>
                </tr>
                <tr>
                    <td>
                        @{
                            string BieuTuongPath = "~/assets/Images/DanhMuc/" + Model.BieuTuong;
                        }
                        <img src="@Url.Content(BieuTuongPath)" />
                    </td>
                </tr>
            </table>
        </div>
        <button class="btn btn-inverse-dark btn-fw" onclick="location.href='@Url.Action("Index", "DanhMucs")';return false;">Quay lại</button>
    </div>
</div>