@model Nhom8_IMUA.Models.Role

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-lg-12 grid-margin stretch-card">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RoleID)
        <div class="card">
            <div class="card-body">
                <h3 class="elements-header">Sửa vai trò</h3>
                <br />
                <div class="table-responsive">
                    <table class="table table-striped">
                        <tr>
                            <td>
                                <label class="elements-title">Tên vai trò :</label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                    </table>
                </div>
                <input type="submit" value="Lưu" class="btn btn-outline-warning btn-fw" />
                <button class="btn btn-inverse-dark btn-fw" onclick="location.href='@Url.Action("Index", "VaiTros")';return false;">Hủy</button>
            </div>
        </div>
    </div>
}