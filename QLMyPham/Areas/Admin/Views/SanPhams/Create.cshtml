@model Nhom8_IMUA.Models.SanPham

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "SanPhams", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="col-lg-12 grid-margin stretch-card">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" value="default-img.png" name="AnhDaiDien" />
        <div class="card">
            <div class="card-body">
                <h3 class="elements-header">Thêm mới sản phẩm</h3>
                <br />
                <div class="table-responsive">
                    <table class="table table-striped">
                        <tr>
                            <td>
                                <label class="elements-title">Tên sản phẩm :</label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="elements-title">Ảnh sản phẩm :</label>
                                <label for="ufile" style="cursor:pointer;" class="modal-label">Chọn ảnh</label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <img id="output" src="~/assets/img/default-img.png" />
                                <input name="AnhDaiDien" id="ufile" type="file" style="display:none;" onchange="loadFile(event)" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="elements-title">Giá sản phẩm :</label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="elements-title">Khuyến mãi :</label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.EditorFor(model => model.KhuyenMai, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.KhuyenMai, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="elements-title">Mô tả :</label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="elements-title">Xuất xứ :</label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.EditorFor(model => model.XuatXu, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.XuatXu, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="elements-title">Trọng lượng :</label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.EditorFor(model => model.TrongLuong, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TrongLuong, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="elements-title">Thuộc loại sản phẩm :</label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DropDownList("MaLoai", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MaLoai, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                    </table>
                </div>
                <input type="submit" value="Thêm" class="btn btn-outline-warning btn-fw" />
                <button class="btn btn-inverse-dark btn-fw" onclick="location.href='@Url.Action("Index", "SanPhams")';return false;">Hủy</button>
            </div>
        </div>
    </div>

}

<script>
    var loadFile = function (event) {
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
    }
</script>